<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative text-center z-10">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-50 border border-indigo-100 text-indigo-600 text-sm font-medium mb-8 animate-fade-in-up">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
      </span>
      Now in Beta
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-gray-900 mb-6 drop-shadow-sm">
      Track your life's <br class="hidden md:block" />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">Footprints</span>
    </h1>
    
    <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
      The ultimate companion for explorers. Visualize your journeys, analyze your stats, and share your adventures with the world.
    </p>

    <!-- Waitlist Form -->
    <div id="waitlist-container" class="max-w-md mx-auto relative">
        <div id="waitlist-success" class="hidden p-4 rounded-2xl bg-green-50 border border-green-100 text-green-800">
            <div class="flex items-center justify-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                <span class="font-medium">You're on the list! We'll be in touch.</span>
            </div>
        </div>

        <form id="waitlist-form" class="bg-white p-2 rounded-2xl shadow-xl shadow-indigo-100/50 border border-gray-100 transiton-all hover:shadow-2xl hover:shadow-indigo-200/50 hover:-translate-y-1 duration-300 transition-all">
            <div class="flex flex-col sm:flex-row gap-2">
                <input 
                    type="email" 
                    name="email"
                    placeholder="Enter your email" 
                    required
                    class="flex-1 px-4 py-3 rounded-xl bg-gray-50 border-transparent focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all placeholder:text-gray-400 text-gray-900"
                />
                <button 
                    type="submit"
                    class="px-6 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-semibold shadow-lg shadow-indigo-200 transition-all active:scale-95 whitespace-nowrap disabled:opacity-70 disabled:cursor-not-allowed flex items-center justify-center min-w-[140px]"
                >
                    <span class="default-state">Join Waitlist</span>
                    <span class="loading-state hidden">
                        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </span>
                </button>
            </div>
        </form>
    </div>
    <p class="mt-4 text-sm text-gray-500">Join 2,000+ explorers waiting for access.</p>
  </div>
</section>

<script>
    const form = document.getElementById('waitlist-form');
    // REPLACE THIS URL with your Google Apps Script Web App URL
    const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycby2MgQ-vykuV1LYiM4NIxoTibNBvZqs6JnbC-KcR3verHY_grgSGu68adIuIjOVjzyFEg/exec';

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const button = form.querySelector('button');
            const defaultState = button.querySelector('.default-state');
            const loadingState = button.querySelector('.loading-state');
            const container = document.getElementById('waitlist-container');
            const successMsg = document.getElementById('waitlist-success');

            // Set loading state
            button.disabled = true;
            defaultState.classList.add('hidden');
            loadingState.classList.remove('hidden');

            try {
                if (GOOGLE_SCRIPT_URL === 'YOUR_GOOGLE_SCRIPT_URL_HERE') {
                     // Simulation for demo purposes since user hasn't set up the backend yet
                     await new Promise(resolve => setTimeout(resolve, 1500));
                     console.log("Simulating submission. Replace GOOGLE_SCRIPT_URL to make it real.");
                } else {
                    const formData = new FormData(form);
                    // Add a specific sheet name if your script handles multiple sheets, or just generic 'type'
                    formData.append('formType', 'waitlist');
                    
                    await fetch(GOOGLE_SCRIPT_URL, {
                        method: 'POST',
                        body: formData,
                        mode: 'no-cors' // Important for Google Apps Script
                    });
                }

                // Show success
                form.classList.add('hidden');
                successMsg.classList.remove('hidden');
                
            } catch (err) {
                console.error('Error:', err);
                alert('Something went wrong. Please try again.');
                
                // Reset state
                button.disabled = false;
                defaultState.classList.remove('hidden');
                loadingState.classList.add('hidden');
            }
        });
    }
</script>
